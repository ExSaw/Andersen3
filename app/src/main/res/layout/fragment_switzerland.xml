<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_5"
    tools:context=".fragments.AustriaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorRed">

            <RelativeLayout
                android:id="@+id/seg1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/seg2"
                android:layout_marginBottom="0dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/seg2"
                android:layout_width="@dimen/switzelrand_flag_segment"
                android:layout_height="@dimen/switzelrand_flag_segment"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/seg3"
                android:layout_width="@dimen/switzelrand_flag_segment"
                android:layout_height="@dimen/switzelrand_flag_segment"
                android:layout_below="@+id/seg2"
                android:layout_marginTop="0dp"
                android:layout_centerHorizontal="true"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/seg4"
                android:layout_width="@dimen/switzelrand_flag_segment"
                android:layout_height="@dimen/switzelrand_flag_segment"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/seg2"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/seg5"
                android:layout_width="@dimen/switzelrand_flag_segment"
                android:layout_height="@dimen/switzelrand_flag_segment"
                android:layout_marginStart="0dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/seg2"
                android:background="@color/white" />


        </RelativeLayout>

    </LinearLayout>

</FrameLayout>